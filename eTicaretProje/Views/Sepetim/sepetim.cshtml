<body class="cart">
    <!--[if lt IE 8]>
        <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <!-- wishlist-area start -->

    <div class="wishlist-area">

        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <form action="#">
                        <div class="wishlist-content">
                            <div class="wishlist-title">
                                <h2>Sepetim</h2>
                            </div>
                            <div class="wishlist-table table-responsive">
                                <table>
                                    <thead>
                                        <tr>
                                            <th class="product-remove">@Resource.Home.resim</th>
                                            <th class="product-thumbnail">@Resource.Home.urunAciklama</th>
                                            <th class="product-name"><span class="nobr">@Resource.Home.urunAdi</span></th>
                                            <th class="product-price"><span class="nobr">@Resource.Home.UrunFiyati</span></th>
                                            <th class="product-stock-stauts"><span class="nobr">@Resource.Home.stok </span></th>
                                            <th class="product-stock-stauts"><span class="nobr">@Resource.Home.sil </span></th>
                                            <th class="product-add-to-cart"></th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                      
                                        @foreach (var item in Model.Sepet)
                                        {
                                            <tr>
                                                <td class="product-thumbnail"><a href="@Url.Action("urunDetay","UrunDetay", new { Id=item.urunID})"><img src="@item.URUNLER.urunResimYol" alt="" /></a></td>
                                                <td class="product-name"><a href="@Url.Action("urunDetay","UrunDetay", new { Id=item.urunID})">@item.URUNLER.urunAciklama</a></td>
                                                <td class="product-name"><a href="@Url.Action("urunDetay","UrunDetay", new { Id=item.urunID})">@item.URUNLER.UrunAdi</a></td>
                                                <td class="product-price">
                                                    <div class="price-box">
                                                        <span class="special-price">
                                                            @item.URUNLER.urunAlisFiyati
                                                           
                                                        </span>
                                                    </div>
                                                </td>
                                                <td class="quantity">
                                                    <input type="number" value="1">
                                                </td>

                                                <td class="product-remove"><a href="@Url.Action("sil","Sepetim", new { Id=item.sepetID})"><i class="fa fa-trash-o"></i></a></td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-lg-8 col-md-8">
                                <div class="buttons-cart">
                                    <a href="@Url.Action("index","Home")">Alışverişe Devam et</a>
                                </div>
                                @*<div class="coupon">
                                    <h3>Kupon</h3>
                                    <p>Kupona sahipsen</p>
                                    <input type="text" placeholder="Coupon code">
                                    <input type="submit" value="Apply Coupon">
                                </div>*@
                            </div>
                            <div class="col-xs-12 col-lg-4 col-md-4">
                                <div class="cart-totals">
                                    <h2>Toplam</h2>
                                    <table>
                                        @*<tr class="cart-subtotal">
                                            <th>Subtotal</th>
                                            <td><span class="amount"></span></td>
                                        </tr>*@
                                        @*<tr class="shipping">
                                            <th>Shipping</th>
                                            <td>
                                                <ul>
                                                    <li>
                                                        <input type="radio">
                                                        <label>
                                                            Flat Rate: <span class="amount"></span>
                                                        </label>
                                                    </li>
                                                    <li>
                                                        <input type="radio">
                                                        <label>
                                                            Free Shipping
                                                        </label>
                                                    </li>
                                                    <li>
                                                        <input type="radio">
                                                        <label>
                                                            International Delivery:<span class="amount">£120.00</span>
                                                        </label>
                                                    </li>
                                                </ul>
                                                <p>
                                                    <a href="#">Calculate Shipping</a>
                                                </p>
                                            </td>
                                        </tr>*@
                                        
                                        <tr class="order-total">
                                            <th>Ara toplam</th>
                                            <td>
                                                <strong>
                                                    <span class="amount">@Model.Sepet.Sum(x => x.URUNLER.urunAlisFiyati)</span>
                                                </strong>
                                            </td>
                                        </tr>
                                        <tr class="order-total">
                                            <th>KDV</th>
                                            <td>
                                                <strong>
                                                    <span class="amount">@(Model.Sepet.Sum(x => x.URUNLER.urunFiyat)-Model.Sepet.Sum(x => x.URUNLER.urunAlisFiyati)) </span>
                                                </strong>
                                            </td>
                                        </tr>
                                        <tr class="order-total">
                                            <th>Toplam</th>
                                            <td>
                                                <strong>
                                                    <span class="amount">@Model.Sepet.Sum(x => x.URUNLER.urunFiyat)</span>
                                                </strong>
                                            </td>
                                        </tr>
                                        
                                    </table>
                                    <div class="clear"></div>
                                    <div class="proceed-to-checkout">
                                        <a href="#">Devam Et</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
