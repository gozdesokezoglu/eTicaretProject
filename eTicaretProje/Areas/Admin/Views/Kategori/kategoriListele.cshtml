@model List<eTicaretProje.KATEGORILER>
    @{
        ViewBag.Title = "kategoriListele";
    }


    <div class="col-sm-12">
        <section class="panel">
            <header class="panel-heading">
                KATEGORİLER
                <span class="tools pull-right">
                    <a href="javascript:;" class="fa fa-chevron-down"></a>
                    <a href="javascript:;" class="fa fa-times"></a>
                </span>
            </header>
            <div class="panel-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>KategoriID</th>
                            <th>KategoriAD</th>
                            <th>AnaKategoriID</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.kategoriID</td>
                                <td>@item.kategoriAdi</td>
                                <td>@item.anaKategoriID</td>

                                <td>@Html.ActionLink("Düzenle", "Edit", "Kategori", new { id = item.kategoriID }, null)| @Html.ActionLink("Sil", "Delete", "Kategori", new { id = item.kategoriID }, null)</td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </section>
    </div>


