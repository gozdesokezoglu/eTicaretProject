@model eTicaretProje.Areas.Admin.Models.RolKullaniciEkleModel
@{
    ViewBag.Title = "RolKullaniciEkle";
}


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">

                <header class="panel-heading">
                    <h4>Rol Ata</h4>
                </header>

                @using (Html.BeginForm("RolKullaniciEkle", "Rol", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                {
                    <br />
                    <div class="form-group">
                        @Html.LabelFor(m => m.KullaniciAdi, new { @class = "col-sm-3 control-label" })
                        <div class="col-lg-4">
                            @Html.TextBoxFor(m => m.KullaniciAdi, new { @class = "form-control", placeholder = "Kullanıcı Adı" })

                        </div>
                    </div>
                    <div class="form-group">

                        @Html.LabelFor(m => m.RolAdi, new { @class = "col-sm-3 control-label" })
                        <div class="col-lg-4">
                            @Html.TextBoxFor(m => m.RolAdi, new { @class = "form-control", placeholder = "Rol Adı" })
                            <br />
                            <button type="submit" class="btn btn-primary">Rol Ata</button>

                        </div>
                    </div>

                }

                <br />
            </section>
        </div>

    </div>
</div>
