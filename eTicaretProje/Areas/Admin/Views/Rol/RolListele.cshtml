@model List<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
    @{
        ViewBag.Title = "RolListele";
        //Layout = "/Areas/Admin/Views/_Layout.cshtml";
    }

    <div class="col-sm-12">
        <section class="panel">
            <header class="panel-heading">
                Rol Listesi
                <span class="tools pull-right">
                    <a href="javascript:;" class="fa fa-chevron-down"></a>
                    <a href="javascript:;" class="fa fa-times"></a>
                </span>
            </header>
            <div class="panel-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>RolAdı</th>
                            <th>RolSayısı</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td> @item.Users.Count</td>
                                <td>@Html.ActionLink("Düzenle", "Edit", "Rol", new { id = item.Id }, null)| @Html.ActionLink("Sil", "Delete", "Rol", new { id = item.Id }, null)|@Html.ActionLink("Yeni Rol Ekle ", "RolEkle")</td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </section>
    </div>
