@model List<eTicaretProje.ANAKATEGORİ>
    @{
        ViewBag.Title = "AnaKategoriListele";
    }

    <div class="col-sm-12">
        <section class="panel">
            <header class="panel-heading">
                ANA KATEGORİLER
                <span class="tools pull-right">
                    <a href="javascript:;" class="fa fa-chevron-down"></a>
                    <a href="javascript:;" class="fa fa-times"></a>
                </span>
            </header>
            <div class="panel-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Ana KategoriID</th>
                            <th>Ana KategoriAD</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.anakategoriID</td>
                                <td>@item.anakategoriAdi</td>

                                <td>@Html.ActionLink("Düzenle", "Edit", "anaKategori", new { id = item.anakategoriID }, null)| @Html.ActionLink("Sil", "Delete", "anaKategori", new { id = item.anakategoriID }, null)</td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </section>
    </div>




