@model List<eTicaretProje.URUNLER>
    @{
        ViewBag.Title = "urunListele";
    }

    <div class="col-sm-12">
        <section class="panel">
            <header class="panel-heading">
                ÜRÜNLER
                <span class="tools pull-right">
                    <a href="javascript:;" class="fa fa-chevron-down"></a>
                    <a href="javascript:;" class="fa fa-times"></a>
                </span>
            </header>
            <div class="panel-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>RESİM</th>
                            <th>URUN ADI</th>
                            <th>AÇIKLAMA</th>
                            <th>ALIŞ FİYATI</th>
                            <th>URUN FİYATI</th>
                            <th>BAŞLANGIÇ</th>
                            <th>BİTİŞ</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.urunID</td>
                                <td><img src="@item.urunResimYol" style="height:100%; max-height:100px;" /></td>
                                <td>@item.UrunAdi</td>
                                <td>@item.urunAciklama</td>
                                <td>@item.urunAlisFiyati</td>
                                <td>@item.urunFiyat</td>
                                <td>@item.BaslangicTarihi</td>
                                <td>@item.BitisTarihi</td>
                                <td>@Html.ActionLink("Düzenle", "Edit", "Urunler", new { id = item.urunID }, null)| @Html.ActionLink("Sil", "Delete", "Urunler", new { id = item.urunID }, null)</td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </section>
    </div>
