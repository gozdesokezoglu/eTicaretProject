@model eTicaretProje.Areas.Admin.Models.UrunModel

@{
    ViewBag.Title = "urunEkle";
}


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <h2>Ekle</h2>
                </header>
                @using a(Html.BeginForm("EkleUrun", "Urunler", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                {
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.urunAdi, new { @class = "col-sm-3 control-label" })
                        <div class="col-lg-6">
                            @Html.TextBoxFor(m => m.urunAdi, new { @class = "form-control", placeholder = "Urun Adı" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.urunAciklama, new { @class = "col-sm-3 control-label" })
                        <div class="col-lg-6">
                            @Html.TextBoxFor(m => m.urunAciklama, new { @class = "form-control", placeholder = "Açıklama" })

                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.urunAlisFiyati, new { @class = "col-sm-3 control-label" })
                        <div class="col-lg-6">
                            @Html.TextBoxFor(m => m.urunAlisFiyati, new { @class = "form-control", placeholder = "Alış Fiyatı" })

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.urunFiyat, new { @class = "col-sm-3  control-label" })
                        <div class="col-lg-6">
                            @Html.TextBoxFor(m => m.urunFiyat, new { @class = "form-control datepicker", placeholder = "Urun Fiyatı" })

                        </div>

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.urunResimYol, new { @class = "col-sm-3  control-label" })
                        <div class="col-lg-6">
                            @Html.TextBoxFor(m => m.urunResimYol, new { @class = "form-control datepicker" })

                        </div>

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.BaslangicTarihi, new { @class = "col-sm-3  control-label" })
                        <div class="col-lg-6">
                            @Html.TextBoxFor(m => m.BaslangicTarihi, new { @class = "form-control datepicker", placeholder = "Baslangic Tarihi" })

                        </div>

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.BitisTarihi, new { @class = "col-sm-3 control-label" })
                        <div class="col-lg-6">
                            @Html.TextBoxFor(m => m.BitisTarihi, new { @class = "form-control datepicker", placeholder = "Bitis Tarihi" })
                            <br />
                            <div class="col-lg-6">
                                <button type="submit" class="btn btn-primary">Ürün Ekle</button>
                            </div>
                        </div>
                    </div>

                </div>
                }
            </section>
        </div>

    </div>
</div>

