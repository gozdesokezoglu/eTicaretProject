@model eTicaretProje.Areas.Admin.Models.SliderModel
@{
    ViewBag.Title = "Ekle";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <h2>Ekle</h2>
                </header>
                @using (Html.BeginForm("EkleSlider", "Slider", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                {
                    <div class="panel-body">

                        <div class="form-group">
                            @Html.LabelFor(m => m.SliderText, new { @class = "col-sm-3 control-label" })
                            <div class="col-lg-6">
                                @Html.TextBoxFor(m => m.SliderText, new { @class = "form-control", placeholder = "Slider Yazısı" })

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Resim, new { @class = "col-sm-3 control-label" })
                            <div class="col-lg-6">
                                @Html.TextBoxFor(m => m.Resim, new { @class = "form-control", placeholder = "Dosya Seç", type = "file" })

                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.BaslangicTarihi, new { @class = "col-sm-3  control-label" })
                            <div class="col-lg-6">
                                @Html.TextBoxFor(m => m.BaslangicTarihi, new { @class = "form-control datepicker", placeholder = "Başlangıç tarihi" })

                            </div>

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.BitisTarihi, new { @class = "col-sm-3 control-label" })
                            <div class="col-lg-6">
                                @Html.TextBoxFor(m => m.BitisTarihi, new { @class = "form-control datepicker", placeholder = "Bitiş Tarihi" })
                                <br />
                                <div class="col-lg-6">
                                    <button type="submit" class="btn btn-primary">Ekle</button>
                                </div>
                            </div>
                        </div>

                    </div>
                }
            </section>
        </div>

    </div>
</div>
