@model List<eTicaretProje.SLIDER>
    @{
        ViewBag.Title = "slider";
    }

    <div class="col-sm-12">
        <section class="panel">
            <header class="panel-heading">
                SLİDER
                <span class="tools pull-right">
                    <a href="javascript:;" class="fa fa-chevron-down"></a>
                    <a href="javascript:;" class="fa fa-times"></a>
                </span>
            </header>
            <div class="panel-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>RESİM YOLU</th>
                            <th>TEXT</th>
                            <th>BAŞLANGIÇ TARİHİ</th>
                            <th>BİTİŞ TARİHİ</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SliderID</td>
                                <td><img src="@item.ResimYolu" style="height:100%; max-height:100px;" /></td>
                                <td>@item.SliderText</td>
                                <td>@item.BaslangicTarihi</td>
                                <td>@item.BitisTarihi</td>
                                <td>@Html.ActionLink("Düzenle", "Edit", "Slider", new { id = item.SliderID }, null)| @Html.ActionLink("Sil", "Delete", "Slider", new { id = item.SliderID }, null)</td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </section>
    </div>

